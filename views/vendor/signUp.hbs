<!-- Section: Design Block -->
<section class="">
  <!-- Jumbotron -->
  <div class="px-4 py-5 px-md-5 text-center text-lg-start" style="background-color: hsl(0, 0%, 96%)">
    <div class="container">
      <div class="row gx-lg-5 align-items-center">
        <div class="col-lg-6 mb-5 mb-lg-0">
          <h1 class="my-5 display-3 fw-bold ls-tight">
            The best offer <br />
            <span class="text-primary">for your business</span>
          </h1>
          <p style="color: hsl(217, 10%, 50.8%)">
            Lorem ipsum dolor sit amet consectetur adipisicing elit.
            Eveniet, itaque accusantium odio, soluta, corrupti aliquam
            quibusdam tempora at cupiditate quis eum maiores libero
            veritatis? Dicta facilis sint aliquid ipsum atque?
          </p>
        </div>

        <div class="col-lg-6 mb-5 mb-lg-0">
          <div class="card">
            <div class="card-body py-5 px-md-5">
              <form action="/vendor/signUp" method="post" id="signUpForm">
                <!-- 2 column grid layout with text inputs for the first and last names -->
                <div class="row">
                  {{#if session}}
                  <p class="text text-danger">Already exist an account in this Mobile number!</p>
                  {{/if}}
                  <div class="col-md-6 mb-4">
                    <div class="form-outline">
                      <label class="form-label" for="Fname">First name</label>
                      <input type="text" id="Fname" class="form-control" name="Fname" />

                    </div>
                  </div>
                  <div class="col-md-6 mb-4">
                    <div class="form-outline">
                      <label class="form-label" for="Lname">Last name</label>
                      <input type="text" id="Lname" class="form-control" name="Lname" />

                    </div>
                  </div>


                  <!-- Email input -->
                  <div class="col-md-7 form-outline mb-4">
                    <label class="form-label" for="Email">Email address</label>
                    <input type="email" id="Email" class="form-control" name="Email" />

                  </div>

                   <div class="col-md-5 form-outline mb-4">
                    <label class="form-label" for="MobileNo">Mobile no.</label>
                    <input type="number" id="MobileNo" class="form-control" name="MobileNo"   oninput="javascript: if (this.value.length > this.maxLength) this.value = this.value.slice(0, this.maxLength);"
             maxlength="10"/>

                  </div>

                  <div class="col-md-6 mb-4 form-outline">
                      <label class="form-label" for="Password">Password</label>
                      <input type="password" id="Password" class="form-control" name="Password" />

                  </div>
                  <div class="col-md-6 mb-4">
                    <div class="form-outline">
                      <label class="form-label" for="cPassword">Confirm Password</label>
                      <input type="password" id="cPassword" class="form-control" name="confirmPassword" />

                    </div>
                  </div>
                </div>

                <input type="hidden" id="custId" name="block" value= ""/>


                <!-- Submit button -->
                <button type="submit" class="btn btn-primary btn-block mb-4">
                  Sign up
                </button>

                <div class="pt-3  d-flex align-items-center justify-content-center">
                  <p class="mb-0">Have already an account?
                    <a href="/vendor" class="text-danger-50 fw-bold">Sign In</a>
                  </p>
                </div>
              </form>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  </div>
  <!-- Jumbotron -->
</section>
<!-- Section: Design Block -->
<style>

   .error{
    color: red;
  }


   /* Chrome, Safari, Edge, Opera */
  input::-webkit-outer-spin-button,
  input::-webkit-inner-spin-button {
    -webkit-appearance: none;
    margin: 0;
  }

  /* Firefox */
  input[type=number] {
    -moz-appearance: textfield;
  }
</style>







<script>
  $().ready(function () {
    $("#signUpForm").validate({

      rules: {
        Fname: {
          required: true,
          maxlength: 16,
          minlength: 3

        },
        Lname: {
          required: true,
          maxlength: 16,
          minlength: 3

        },
        Email: {
          required: true,
          email: true
        },
        Password: {
          required: true,
          minlength: 4,
          maxlength: 8
        },
        confirmPassword: {
          required: true,
          minlength: 4,
          maxlength: 8,
          equalTo: "#Password"
        },
        MobileNo:{
          required : true,
          minlength: 10
        }

      },
      errorPlacement: function ( error, element ) {

        if(element.parent().hasClass('input-group')){
          error.insertAfter( element.parent() );
        }else{
          	error.insertAfter( element );
        }

},
      messages: {
        Fname: {
          required: 'Enter your First Name',
          maxlength: "Enter less than 16 letters.",
          minlength: 'Enter atleast 4 letters.'

        },
        Lname: {
          required: 'Enter your Last Name',
          maxlength: "Enter less than 16 letters.",
          minlength: 'Enter atleast 4 letters.'

        },
        Email: {
          required: 'Please Enter your E-mail',
          email: "Invalid E-mail Address"
        },
        Password: {
          required: 'Please Enter Password',
          minlength: 'Enter atleast 4 charectors',
          maxlength: 'Enter less than 8 charectors'
        },
        confirmPassword: {
          required: 'Please Enter Password',
          minlength: 'Enter atleast 4 charectors',
          maxlength: 'Enter less than 8 charectors',
          equalTo: 'Type same password.'

        },
        MobileNo:{
          required : 'Ender Mobile number',
          minlength: "Enter minimum 10 digits"
        }
      }
    });
  });


</script>