
 
 
 <!-- Page Header Start -->
    <div class="container-fluid bg-secondary mb-5">
        <div class="d-flex flex-column align-items-center justify-content-center" style="min-height: 300px">
            <h1 class="font-weight-semi-bold text-uppercase mb-3">Wish List</h1>
            <div class="d-inline-flex">
                <p class="m-0"><a href="/">Home</a></p>
                <p class="m-0 px-2">-</p>
                <p class="m-0">Wish List</p>
            </div>
        </div>
    </div>
    <!-- Page Header End -->


    <!-- Wish List Start -->
    <div class="container-fluid pt-5">
        <div class="row px-xl-5">
            <div class="col-lg-12 table-responsive mb-5">
                <table class="table table-bordered text-center mb-0">
                    <thead class="bg-secondary text-dark">
                        <tr>
                            <th></th>
                            <th>Product</th>
                            <th>Price</th>
                            <th>Discount</th>
                            <th>Discount Price</th>
                            
                            <th>Remove</th>
                        </tr>
                    </thead>
                    <tbody class="align-middle">
                        {{#each wishlist}}
                        
                        <tr>
                            <td class="float-middle"><img class="mr-2" src="/images/product/{{this.productDetails.Images.[0]}}" alt="" style="width: 50px;"></td>
                            <td class="align-middle" >{{this.productDetails.Name}}</td>
                            <td class="align-middle" >Rs. {{this.productDetails.Price}}</td>
                            <td class="align-middle" >{{this.productDetails.Discount}}</td>
                            <td class="align-middle" >Rs. {{this.productDetails.DiscountPrice}}</td>

                            <td class="align-middle"><button class="btn btn-sm btn-primary"><i onclick="deleteFromWish('{{this.productDetails._id}}')" class="fa fa-times"></i></button></td>
                        </tr>
                        
                       
                        {{/each}}
                    </tbody>
                </table>
            </div>
           
        </div>
    </div>





<script src="/javascripts/js.js"></script>
 